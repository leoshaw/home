[user]
  name = Leo Shaw
  email = leo@leoshaw.co.uk
[alias]
  st = status
  pr = pull --rebase
  co = checkout
  pick = cherry-pick
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  cleanup = "!git branch --merged master | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
[merge]
  conflictstyle = diff3
[rerere]
  enabled = true
[push]
  default = current
[core]
	autocrlf = true
